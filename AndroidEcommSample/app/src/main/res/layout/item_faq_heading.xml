<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="model"
            type="com.iqonic.shophop.models.Category" />

        <variable
            name="callback"
            type="com.iqonic.shophop.base.BaseRecyclerAdapter.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/spacing_standard"
        android:paddingEnd="@dimen/spacing_control_half"
        android:paddingTop="@dimen/spacing_standard"
        android:paddingBottom="@dimen/spacing_standard">


        <TextView
            android:id="@+id/tvCategory"
            style="@style/SidebarLabel.SidebarOption"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black"
            android:padding="0dp"
            android:text="@{model.categoryName}" />

    </LinearLayout>
</layout>
